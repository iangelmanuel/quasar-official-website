---
import { topMenuNavigation } from '@/constant/topmenu-navigation'
import Anchor from '../ui/Anchor.astro'

const { pathname } = Astro.url
---

<header class="flex justify-center gap-10 items-center px-20 py-2 border-b">
  <section class="mr-5">
    <a
      href="/"
      class="flex gap-2 items-center"
    >
      <img
        src="/images/logo.png"
        alt="Quasar Design"
        class="w-16"
      />
    </a>
  </section>

  <nav>
    <ul class="flex gap-20">
      {
        topMenuNavigation.map(({ title, url }) => (
          <li class="hover:scale-110 transition-transform delay-150 duration-300">
            <a
              href={url}
              class="text-slate-800 font-semibold transition-all"
            >
              {title}
            </a>

            {pathname === url ? (
              <div class="border-b-2 border-quasar px-5" />
            ) : (
              <div class="border-transparent px-5" />
            )}
          </li>
        ))
      }
    </ul>
  </nav>

  <section class="flex items-center ml-5">
    <Anchor
      href="/contact"
      className="px-4 py-2"
      >Contactanos</Anchor
    >
  </section>
</header>
